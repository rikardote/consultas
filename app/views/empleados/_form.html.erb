<%= form_for(@empleado, remote: true, :html => { :role => "form"}) do |f|  %>
  <div id="error_explanation" class="bg-danger text-danger"></div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :ip, :class => "control-label" %>
        <%= f.text_field :ip, :class => "form-control first_input" %>
      </div>
      <div class="form-group">
        <%= f.label :num_empleado, :class => "control-label" %>
        <%= f.text_field :num_empleado, :maxlength => 6, :class => "form-control" %>
      </div>
       <div class="form-group">
        <%= f.label :nom_empleado, :class => "control-label" %>
        <%= f.text_field :nom_empleado, :class => "form-control" %>
       </div>
  </div>   
    
 
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :mac_address, :class => "control-label" %>
      <%= f.text_field :mac_address, :class => "form-control" %>
    </div>
  <div class="form-group">
      <%= f.label :departamento, :class => "control-label" %>
      <%= f.text_field :departamento, :class => "form-control" %>
  </div>
  <div class="form-group">
      <%= f.submit @empleado.new_record? ? "Asignar" : "Modificar", :class => "btn btn-primary" %>
  </div>
    
    </div>
  </div>
<%end%>